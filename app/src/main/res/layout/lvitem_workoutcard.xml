<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="30sp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/cardExerciseName"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:textSize="@dimen/workout_preview_text_size"
        android:text="Exercise"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.2"/>

    <TextView
        android:id="@+id/cardSets"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/workout_preview_text_size"
        android:text="Sets"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@+id/cardExerciseName"
        app:layout_constraintLeft_toRightOf="@id/cardExerciseName"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.1"/>

    <TextView
        android:id="@+id/cardReps"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/workout_preview_text_size"
        android:text="Reps"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@+id/cardExerciseName"
        app:layout_constraintLeft_toRightOf="@id/cardSets" />

    <TextView
        android:id="@+id/cardRest"
        android:layout_width="60sp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/workout_preview_text_size"
        android:text="Rest"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="@+id/cardExerciseName"
        app:layout_constraintLeft_toRightOf="@id/cardReps" />

</androidx.constraintlayout.widget.ConstraintLayout>